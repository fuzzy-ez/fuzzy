{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES5",
    "strict": true,
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
